{% if params.nextPage or params.previousPage %}
  <nav class="dm-pagination" role="navigation" aria-label="{{ params.ariaLabel | default('Pagination') }}">
    <ul class="dm-pagination__list">
      {% if params.previousPage %}
        {% set previous = params.previousPage %}
        <li class="dm-pagination__item dm-pagination__item--previous">
          <a href="{{ previous.url }}"
            class="dm-pagination__link"
            rel="prev"
          >
            <span class="dm-pagination__link-title">
              <svg class="dm-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
                <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"/>
              </svg>
              <span class="dm-pagination__link-text">
                {{ previous.title }}
              </span>
            </span>
            {% if previous.label %}
              <span class="dm-pagination__link-divider govuk-visually-hidden">:</span>
              <span class="dm-pagination__link-label">{{ previous.label }}</span>
            {% endif %}
          </a>
        </li> 
      {% endif %}
      {% if params.nextPage %}
        {% set next = params.nextPage %}
        <li class="dm-pagination__item dm-pagination__item--next">
          <a href="{{ next.url }}"
            class="dm-pagination__link"
            rel="next"
          >
            <span class="dm-pagination__link-title">
              <svg class="dm-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
                <path d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"/>
              </svg>
              <span class="dm-pagination__link-text">
                {{ next.title }}
              </span>
            </span>
            {% if next.label %}
              <span class="dm-pagination__link-divider govuk-visually-hidden">:</span>
              <span class="dm-pagination__link-label">{{ next.label }}</span>
            {% endif %}
          </a>
        </li> 
      {% endif %}
    </ul>
 </nav>
{% endif %}
