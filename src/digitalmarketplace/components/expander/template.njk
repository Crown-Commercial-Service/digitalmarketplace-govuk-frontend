{% if params.title %}
  <div
    class="dm-expander {% if params.classes %}params.classes{% endif %}"
    data-module="dm-expander"
    data-open-on-load="{% if params.openOnLoad %}true{% else %}false{% endif %}"
    {% if params.ariaControlsId %} data-input-aria-controls="{{ params.ariaControlsId }}"{% endif %}
  >
    <h2 class="dm-expander__heading">
      <span class="dm-expander__title js-toggle" id="expander-title-{{ params.id }}">{{ params.title }}</span>
      <svg version="1.1" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg" class="dm-expander__icon dm-expander__icon--up" aria-hidden="true" focusable="false"><path d="m798.16 609.84l-256-256c-16.683-16.683-43.691-16.683-60.331 0l-256 256c-16.683 16.683-16.683 43.691 0 60.331s43.691 16.683 60.331 0l225.84-225.84 225.84 225.84c16.683 16.683 43.691 16.683 60.331 0s16.683-43.691 0-60.331z"/></svg>
      <svg version="1.1" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg" class="dm-expander__icon dm-expander__icon--down" aria-hidden="true" focusable="false"><path d="m225.84 414.16l256 256c16.683 16.683 43.691 16.683 60.331 0l256-256c16.683-16.683 16.683-43.691 0-60.331s-43.691-16.683-60.331 0l-225.84 225.84-225.84-225.84c-16.683-16.683-43.691-16.683-60.331 0s-16.683 43.691 0 60.331z"/></svg>
      {% if params.selectedMessage %}<div class="dm-expander__selected-counter">{{ params.selectedMessage }}</div>{% endif %}
    </h2>
    <div class="dm-expander__content js-content {% if params.openOnLoad %}dm-expander__content--visible{% endif %}" id="{{ params.id }}">
      {{ params.content|safe }}
    </div>
  </div>
{% endif %}
