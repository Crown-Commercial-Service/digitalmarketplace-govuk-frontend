{
  "private": true,
  "name": "digitalmarketplace-govuk-frontend-repository",
  "description": "Used only for the development of Digital Marketplace GOV.UK Frontend, see `package/package.json` for the published `package.json`",
  "scripts": {
    "dev": "gulp dev --gulpfile 'app/gulpfile.js'",
    "heroku": "node app/start.js",
    "test": "standardx && gulp compile && jest",
    "build": "gulp build --silent",
    "release": "./bin/release.sh",
    "release:dry-run": "npm run release -- --dry-run",
    "release-to-branch": "./bin/release-to-branch.sh",
    "postinstall": "gulp postInstall",
    "pythonTests": "cd python-tests && nox"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "node-emoji": "^1.11.0",
    "standardx": "^7.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupFilesAfterEnv": [
      "./config/jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/app/"
    ]
  },
  "browserslist": [
    ">0.1%",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Safari >= 12",
    "ie 11",
    "iOS >= 9"
  ],
  "standardx": {
    "env": [
      "jest"
    ],
    "globals": [
      "page",
      "browser",
      "context",
      "Element",
      "jestPuppeteer"
    ],
    "ignore": [
      "/package/**/*",
      "/node_modules/**/*",
      "/src/digitalmarketplace/vendor/**/*"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-var": 0
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.8",
    "cheerio": "^1.0.0-rc.10",
    "cookie-parser": "^1.4.6",
    "cssnano": "^5.1.7",
    "express": "^4.17.3",
    "govuk-frontend": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-better-rollup": "^4.0.1",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "install-peers": "^1.0.3",
    "jest": "27.5.1",
    "jest-axe": "6.0.0",
    "jest-puppeteer": "6.1.0",
    "nodemon": "^2.0.15",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.12",
    "puppeteer": "^13.5.2",
    "rollup": "^2.70.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.50.1"
  }
}
