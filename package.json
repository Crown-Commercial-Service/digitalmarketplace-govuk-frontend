{
  "private": true,
  "name": "digitalmarketplace-govuk-frontend-repository",
  "description": "Used only for the development of Digital Marketplace GOV.UK Frontend, see `package/package.json` for the published `package.json`",
  "scripts": {
    "dev": "gulp dev --gulpfile 'app/gulpfile.js'",
    "heroku": "node app/start.js",
    "test": "standardx && gulp compile && jest",
    "build": "gulp build --silent",
    "release": "./bin/release.sh",
    "release:dry-run": "npm run release -- --dry-run",
    "release-to-branch": "./bin/release-to-branch.sh",
    "postinstall": "gulp postInstall",
    "pythonTests": "cd python-tests && nox"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "node-emoji": "^1.10.0",
    "standardx": "^7.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupFilesAfterEnv": [
      "./config/jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/app/"
    ]
  },
  "browserslist": [
    ">0.1%",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Safari >= 12",
    "ie 11",
    "iOS >= 9"
  ],
  "standardx": {
    "env": [
      "jest"
    ],
    "globals": [
      "page",
      "browser",
      "context",
      "Element",
      "jestPuppeteer"
    ],
    "ignore": [
      "/package/**/*",
      "/node_modules/**/*",
      "/src/digitalmarketplace/vendor/**/*"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-var": 0
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-env": "^7.13.12",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "^1.4.5",
    "cssnano": "^4.1.10",
    "express": "^4.17.1",
    "govuk-frontend": "^2.13.0",
    "gulp-babel": "^8.0.0",
    "gulp-better-rollup": "^4.0.1",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "install-peers": "^1.0.3",
    "jest": "26.6.3",
    "jest-axe": "4.1.0",
    "jest-puppeteer": "4.4.0",
    "nodemon": "^2.0.7",
    "nunjucks": "^3.2.3",
    "postcss": "^8.2.10",
    "puppeteer": "^8.0.0",
    "rollup": "^2.44.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}
