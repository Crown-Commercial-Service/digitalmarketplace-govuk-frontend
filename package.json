{
  "private": true,
  "name": "digitalmarketplace-govuk-frontend-repository",
  "description": "Used only for the development of Digital Marketplace GOV.UK Frontend, see `package/package.json` for the published `package.json`",
  "engines": {
    "node": "10.15.1"
  },
  "scripts": {
    "dev": "gulp dev --gulpfile 'app/gulpfile.js'",
    "test": "standard && gulp compiling && jest",
    "build": "gulp build --silent",
    "release": "./bin/release.sh",
    "release:dry-run": "npm run release -- --dry-run",
    "release-to-branch": "./bin/release-to-branch.sh",
    "postinstall": "gulp postInstall"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "del": "^5.1.0",
    "govuk-frontend": "^2.13.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^8.0.0",
    "node-emoji": "^1.10.0",
    "standard": "^14.3.3"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupFilesAfterEnv": [
      "./config/jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/app/"
    ]
  },
  "browserslist": [
    ">0.1%",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Safari >= 12",
    "ie 11",
    "iOS >= 9"
  ],
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [
      "page",
      "browser",
      "context",
      "Element",
      "jestPuppeteer"
    ],
    "ignore": [
      "/package/**/*",
      "/node_modules/**/*"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "browser-sync": "^2.26.7",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "^1.4.5",
    "cssnano": "^4.1.10",
    "express": "^4.17.1",
    "gulp-babel": "^8.0.0",
    "gulp-better-rollup": "^4.0.1",
    "gulp-if": "^3.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "jest": "^25.1.0",
    "jest-axe": "^3.3.0",
    "install-peers": "^1.0.3",
    "jest-puppeteer": "^4.3.0",
    "nodemon": "^2.0.2",
    "nunjucks": "^3.2.1",
    "puppeteer": "^2.1.1",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}
